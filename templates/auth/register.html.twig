{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block stylesheets %}
<style>
		.auth-form {
			padding: 7rem 9rem 7rem 7rem;
		}
		.btn-custom {
			background-color: #565656;
			border-radius: 0;
			color: white;
			transition: background-color 0.3s ease;
		}
		.btn-custom:hover {
			background-color: rgb(4, 4, 4);
			border-radius: 0;
			color: white;
		}
	</style>
{% endblock %}

{% block body %}
	<section class="">
		<div class="row g-0">
			<div class="col-12 col-md-6">
				<img class="w-100 h-100" style="object-fit: cover; min-height: 600px;" src="/images/register.png" alt="">
			</div>

			<div class="col-12 col-md-6 d-flex flex-column auth-form">
				<h1 class="pb-2">Inscription</h1>
        <p> Tous les champs sont obligatoires. </p>

				{{ form_start(registrationForm) }}
				<div class="d-flex flex-column mb-4">
					{{ form_label(registrationForm.firstName) }}
					{{ form_widget(registrationForm.firstName, { attr: { autocomplete: 'given-name',class: "p-3 border-1 rounded-0" } }) }}
					{{ form_errors(registrationForm.firstName) }}
				</div>

				<div class="d-flex flex-column mb-4">
					{{ form_label(registrationForm.lastName) }}
					{{ form_widget(registrationForm.lastName, { attr: { autocomplete: 'family-name',class: "p-3 border-1 rounded-0" } }) }}
					{{ form_errors(registrationForm.lastName) }}
				</div>

				<div class="d-flex flex-column mb-4">
					{{ form_label(registrationForm.email) }}
					{{ form_widget(registrationForm.email, { attr: { autocomplete: 'email',class: "p-3 border-1 rounded-0" } }) }}
					{{ form_errors(registrationForm.email) }}
				</div>

				<div class="d-flex flex-column mb-4">
					{{ form_label(registrationForm.plainPassword.first) }}
					{{ form_widget(registrationForm.plainPassword.first, { attr: { autocomplete: 'new-password',class: "p-3 border-1 rounded-0" } }) }}
					{{ form_errors(registrationForm.plainPassword.first) }}
				</div>

				<div class="d-flex flex-column mb-4">
					{{ form_label(registrationForm.plainPassword.second) }}
					{{ form_widget(registrationForm.plainPassword.second, { attr: { autocomplete: 'new-password',class: "p-3 border-1 rounded-0" } }) }}
					{{ form_errors(registrationForm.plainPassword.second) }}
				</div>

				<div class="d-flex mb-4 gap-2 checkbox">
					{{ form_widget(registrationForm.termsAccepted) }}
					{{ form_label(registrationForm.termsAccepted) }}
					{{ form_errors(registrationForm.termsAccepted) }}
				</div>

				<button class="btn btn-custom w-100 py-3" type="submit">S'inscrire</button>
				{{ form_end(registrationForm) }}

				<a href="{{ path('app_login') }}" class="auth-switch text-center mt-4 text-decoration-underline text-body-secondary">Déjà un compte ?
													Se connecter
				</a>
			</div>
		</div>
	</section>
{% endblock %}

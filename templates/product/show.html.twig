{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - GreenGoodies{% endblock %}

{% block body %}
  <section class="product-detail">
    <div class="product-media">
      <img src="{{ product.imagePath }}" alt="{{ product.name }}">
    </div>
    <div class="product-info">
      <h1>{{ product.name }}</h1>
      <p class="price">{{ product.price }} €</p>
      <p class="long-desc">{{ product.longDescription }}</p>

      <div class="add-to-cart">
        {% if app.user %}
          <form method="post">
            <label for="quantity">Quantité</label>
            <input
              type="number"
              id="quantity"
              name="quantity"
              min="0"
              value="{{ currentQuantity ?? 1 }}"
              required
            />
            <button type="submit">
              {{ 'Ajouter au panier' }}
            </button>
          </form>
        {% else %}
          <a class="button" href="{{ path('app_login') }}">Se connecter pour commander</a>
        {% endif %}
      </div>
    </div>
  </section>
{% endblock %}
